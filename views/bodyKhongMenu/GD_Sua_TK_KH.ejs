<div class="container">
    <div class="form-group col-xs-5 col-sm-5 col-md-5 col-lg-5" style="margin-left: 30%; border-style: ridge;">
        
            <h2 style="text-align: center;font-weight: bold;">Sửa Tài Khoản Khách Hàng</h2>   
            <div>
                <hr>
            </div>
        <form action="/quanly/cntkkhachhang/suatt" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <input type="hidden" class="form-control" name="idtaikhoankhachhang" value="<%=tkkh.idtaikhoankhachhang%>" required>
            </div>
            <div class="form-group">
                <label>Tên đăng nhập:</label>
                <input value="<%=tkkh.tenDangNhap%>" type="text" class="form-control" placeholder="tenDangNhap" name="tenDangNhap" required> 
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label><input type="checkbox" value="true" name="reset">Đặt lại mật khẩu</label>
                </div>
            </div>
            
            <hr>
            <button type="submit" class="btn btn-success" style="width: 100%;height: 40px;border-radius: 20px;">Lưu Thông tin</button>
            <div>
                <br>
            </div>
        </form>
        <button onclick="BacktoHome()" class="btn btn-primary"
            style="width: 100%;margin-bottom: 5px;height: 40px;border-radius: 20px;">Quay lại</button>
    </div>
</div>

<script>
    function BacktoHome() {
        location.replace('/quanly/cntkkhachhang')
    }           
</script>