<div class="container">
    <div class="row">
        <div class="col-sm-12" style="text-align: center;">
            <p style="font-size: 25px;font-weight: bold;">TÌM KIẾM PHÒNG</p>
            <div style="background: black;height: 2px;width: 1150px;margin-bottom: 20px;">

            </div>
        </div>
    </div>

    <div class="row">
        <table id="myTable" class="table table-bordered">
            <thead>
                <tr>
                    <th>Mã phòng</th>
                    <th>Loại phòng</th>
                    <th>Tình trạng</th>
                </tr>
            </thead>

            <tbody>
                <%for(let i=0;i< dsphong.length ; i++) {%>
                    <tr>
                        <td>
                            <%=dsphong[i].maPhong%>
                        </td>
                        <td>
                            <%=dsphong[i].tenLoaiPhong%>
                        </td>
                        <td>
                            <%=dsphong[i].trinhTrang%>
                        </td>
                    </tr>
                <%}%>
            </tbody>


        </table>
    </div>

</div>
<script>
    $(document).ready( function () {
            $('#myTable').DataTable({ 
                "language": {
                    "lengthMenu": "Hiển thị _MENU_ phòng mỗi trang",
                    "search": "Nhập vào từ khóa muốn tìm:",
                    "infoEmpty": "Hiển thị 10 đến 100 dòng",
                    "paginate": {
                        "first":"Đầu tiên",
                        "last":"Cuối cùng",
                        "next":"Tiếp",
                        "previous":"Trở về"
                    },
                    "zeroRecords": "Không tìm thấy kết quả",
                    "info": "Hiển thị trang _PAGE_ của _PAGES_",
                    "infoFiltered":   "(Tìm trong _MAX_ phòng)",
                },
                "rowReorder": true,
                "columnDefs": [
                    { "orderable": true, "className": 'reorder', "targets": 0 },
                    { "orderable": true, "className": 'reorder', "targets": 1 },
                    { "orderable": false, "targets": '_all' }
                ]
            
            });
        });
</script>
</div>