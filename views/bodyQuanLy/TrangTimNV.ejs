<div class="container">
    <div class="row">
        <div class="col-sm-12" style="text-align: center;">
            <p style="font-size: 25px;font-weight: bold;">TÌM NHÂN VIÊN</p>
            <div style="background: black;height: 2px;width: 1150px;margin-bottom: 20px;">

            </div>
        </div>
    </div>
    <div class="row">
            <table id="myTable" class="table table-bordered">
                <thead>
                    <tr>
                        <th>Mã</th>
                        <th>Họ tên</th>
                        <th>CMND</th>
                        <th>Điện thoại</th>
                        <th>Ngày sinh</th>
                        <th>Địa chỉ</th>
                        
                    </tr>
                </thead>
                <tbody>
                        <%for(let i=0;i< dsnv.length ; i++) {%>
                            <tr>
                                <td>
                                    <%=dsnv[i].id%>
                                </td>
                                <td>
                                    <%=dsnv[i].tenNV%>
                                </td>
                                <td>
                                    <%=dsnv[i].soCMND%>
                                </td>
                                <td>
                                    <%=dsnv[i].soDT%>
                                </td>
                                <td>
                                    <%=dsnv[i].ngaySinh.getDate().toString()%>/
                                        <%=(dsnv[i].ngaySinh.getMonth()+1).toString()%>/
                                            <%=dsnv[i].ngaySinh.getFullYear().toString()%>
                                </td>
                                <td>
                                    <%=dsnv[i].diaChi%>
                                </td>
                                
                            </tr>
                            <%}%>
                        
                </tbody>

            </table>
    </div>
    <script>
        $(document).ready( function () {
            $('#myTable').DataTable({ 
                "language": {
                    "lengthMenu": "Hiển thị _MENU_ nhân viên mỗi trang",
                    "search": "Nhập vào từ khóa muốn tìm:",
                    "infoEmpty": "Hiển thị 10 đến 100 dòng",
                    "paginate": {
                        "first":"Đầu tiên",
                        "last":"Cuối cùng",
                        "next":"Tiếp",
                        "previous":"Trở về"
                    },
                    "zeroRecords": "Không tìm thấy kết quả",
                    "info": "Hiển thị trang _PAGE_ của _PAGES_",
                    "infoFiltered":   "(Tìm trong _MAX_ nhân viên)",
                },
                "rowReorder": true,
                "columnDefs": [
                    { "orderable": true, "className": 'reorder', "targets": 0 },
                    { "orderable": true, "className": 'reorder', "targets": 1 },
                    { "orderable": true, "className": 'reorder', "targets": 2 },
                    { "orderable": true, "className": 'reorder', "targets": 3 },
                    { "orderable": false, "targets": '_all' }
                ]
            
            });
        });
    </script>
</div>