<div class="container">
    <div class="row">
        <div class="col-sm-12" style="text-align: center;">
            <p style="font-size: 25px;font-weight: bold;">TÌM KIẾM KHÁCH HÀNG</p>
            <div style="background: black;height: 2px;width: 1150px;margin-bottom: 20px;">

            </div>
        </div>
    </div>

    <div class="row">
        <table id="myTable" class="table table-bordered">
            <thead>
                <tr>
                    <th>Mã</th>
                    <th>Họ tên</th>
                    <th>Số CMND</th>
                    <th>Số điện thoại</th>
                    <th>Địa chỉ</th>
                    <th>Giới tính</th>
                </tr>
            </thead>

            <tbody>
                <%for(let i=0;i< dskh.length ; i++) {%>
                    <tr>
                        <td>
                            <%=dskh[i].id%>
                        </td>
                        <td>
                            <%=dskh[i].tenKH%>
                        </td>
                        <td>
                            <%=dskh[i].soCMND%>
                        </td>
                        <td>
                            <%=dskh[i].soDT%>
                        </td>
                        <td>
                            <%=dskh[i].diaChi%>
                        </td>
                        <td>
                            <%=dskh[i].gioiTinh%>
                        </td>
                    </tr>
                    <%}%>
            </tbody>


        </table>
    </div>

</div>
<script>
    $(document).ready(function () {
        $('#myTable').DataTable({
            "language": {
                "lengthMenu": "Hiển thị _MENU_ khách hàng mỗi trang",
                "search": "Nhập từ khóa muốn tìm:",
                "infoEmpty": "Hiển thị 10 đến 100 dòng",
                "paginate": {
                    "first": "Đầu tiên",
                    "last": "Cuối cùng",
                    "next": "Tiếp",
                    "previous": "Trở về"
                },
                "zeroRecords": "Không tìm thấy kết quả",
                "info": "Hiển thị trang _PAGE_ của _PAGES_",
                "infoFiltered":   "(Tìm trong _MAX_ khách hàng)",
            },
            "rowReorder": true,
            "columnDefs": [
                { "orderable": true, "className": 'reorder', "targets": 0 },
                { "orderable": true, "className": 'reorder', "targets": 1 },
                { "orderable": true, "className": 'reorder', "targets": 2 },
                { "orderable": true, "className": 'reorder', "targets": 3 },
                { "orderable": true, "className": 'reorder', "targets": 4 },
                { "orderable": true, "className": 'reorder', "targets": 5 },
                { "orderable": false, "targets": '_all' }
            ]

        });
    });
</script>
</div>