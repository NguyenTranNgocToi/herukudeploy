        <div class="col-sm-3">
            <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal">Thêm Loại Dịch
                Vụ</button>
        </div>
    </div><br>
    <div class="row">
        <!-- <div class="table" style="overflow: scroll; height: 500px;"> -->
            <table id="myTable" class="table table-bordered">
                <thead>
                    <tr>
                        <th>Mã loại dịch vụ</th>
                        <th>Tên loại dịch vụ</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <%if(listLDV.length> 0){%>
                        <%for(let i=0;i< listLDV.length ; i++) {%>
                            <tr>
                                <td>
                                    <%=listLDV[i].maLoaiDichVu%>
                                </td>
                                <td>
                                    <%=listLDV[i].tenLoaiDichVu%>
                                </td>
                                <td>
                                    <!-- cách xóa khác -->
                                    <!-- <a href="/quanly/cnloaidv/xoaldv/<%=listLDV[i].maLoaiDichVu%>" class="deleteldv btn btn-danger"
                                        data-confirm="Bạn có đồng ý xóa loại dịch vụ này không?">Xóa</a> -->
                                    <!-- <input type="button" name="delete" value="Delete"
                                        onClick="confirmDelete('/quanly/cnloaidv/xoaldv/<%=listLDV[i].maLoaiDichVu%>')"> -->
                                    <button type="button" class="btn btn-danger" 
                                    onClick="confirmDelete('/quanly/cnloaidv/xoaldv/<%=listLDV[i].maLoaiDichVu%>')">Xóa</button>
                                </td>
                                <td>
                                    <a class="btn btn-warning" href="/quanly/cnloaidv/sualdv/<%=listLDV[i].maLoaiDichVu%>"
                                            class="btn btn-warning">Sửa</a>
                                </td>
                            </tr>
                            <%}%>
                                <%}else{%>
                                    <tr>
                                        <td>Không tìm thấy</td>
                                    </tr>
                                    <%}%>
                </tbody>

            </table>
            <%if(kt != ''){%>
                <div class="alert alert-warning" style="margin-top: 5px;border-radius: 15px;">
                    <strong>Cảnh báo!</strong> <%=kt%>
                </div>
            <%}%>
        <!-- </div> -->

        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismi ss="modal">&times;</button>
                        <h4 class="modal-title" style="text-align: center;font-weight: bold;">Thêm Loại Dịch Vụ</h4>
                    </div>
                    <div class="modal-body">
                        <form action="/quanly/cnloaidv/addloaidv" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label>Tên loại dịch vụ:</label>
                                <input name="tenloaidv" type="text" class="form-control"
                                    placeholder="Nhập tên loại dịch vụ:" required>
                            </div>
                            <button type="submit" class="btn btn-default">Đồng ý</button>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
        <div id="updateModel" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Sửa Loại Dịch Vụ</h4>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group">
                                <label>Mã loại dịch vụ:</label>
                                <input type="text" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Tên loại dịch vụ:</label>
                                <input type="text" class="form-control">
                            </div>
                            <button type="submit" class="btn btn-default">Đồng ý</button>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                        </form>
                    </div>
                </div>

            </div>
        </div>


    </div>
    <script>
        $(document).ready( function () {
            $('#myTable').DataTable({ 
                "language": {
                    "lengthMenu": "Hiển thị _MENU_ loại dịch vụ mỗi trang",
                    "search": "Tìm Kiếm:",
                    "infoEmpty": "Hiển thị 10 đến 100 dòng",
                    "paginate": {
                        "first":"Đầu tiên",
                        "last":"Cuối cùng",
                        "next":"Tiếp",
                        "previous":"Trở về"
                    },
                    "zeroRecords": "Không tìm thấy kết quả",
                    "info": "Hiển thị trang _PAGE_ của _PAGES_",
                },
                "rowReorder": true,
                "columnDefs": [
                    { "orderable": true, "className": 'reorder', "targets": 0 },
                    { "orderable": true, "className": 'reorder', "targets": 1 },
                    // { "orderable": true, "className": 'reorder', "targets": 2 },
                    // { "orderable": true, "className": 'reorder', "targets": 3 },
                    { "orderable": false, "targets": '_all' }
                ]
            
            });
        });
        //cách xóa khác
